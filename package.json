{
  "name": "@vnodesign/slugify",
  "type": "module",
  "version": "1.0.2",
  "packageManager": "pnpm@9.15.6",
  "description": "A lightweight utility to convert strings into URL-friendly slugs, with support for removing Vietnamese diacritics and handling special characters.",
  "author": "Tuan Duc Tran <tuanductran.dev@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/tuanductran",
  "homepage": "https://github.com/vnodesign/slugify#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vnodesign/slugify.git"
  },
  "bugs": "https://github.com/vnodesign/slugify/issues",
  "keywords": [
    "slugify",
    "vietnamese",
    "diacritics",
    "seo",
    "url-friendly",
    "string-manipulation"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.4.0",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "esno": "^4.8.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
